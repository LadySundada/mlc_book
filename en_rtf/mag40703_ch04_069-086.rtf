\pard\plain \s18\f3\fs20\ltrpar\qj\fi0\li0\ri0\sb240\sa0\facenter\sl240\slmult0\expnd0\expndtw0\cf1\up0\charscalex100\b0\i0\ul0\strike0\accnone\hyphpar1\lang1033
